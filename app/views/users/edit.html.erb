<!-- app/views/users/edit.html.erb -->
<h2>Edit user</h2>
<% if cookies.signed[:user_id] == 1 %
  <%= form_for @user, :url => { :action => "update" } do |f| %>
    <%= f.label "Name: " %>
    <%= f.text_field :name %><br />
    <%= f.label "Username: " %>
    <%= f.text_field :username %><br />
    <%= f.hidden_field :id %>
    <%= f.submit "Submit" %>
  <% end %>
<% end %>
